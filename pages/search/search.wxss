/* 搜索框 */
.search-bar {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
  padding: 8px 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  box-sizing: border-box;
  background-color: #efeff4;
  border-top: 1rpx solid #d7d6dc;
  border-bottom: 1rpx solid #d7d6dc;
}
.search-bar_form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
}
.search-bar_box {
  position: relative;
  padding-left: 30px;
  padding-right: 30px;
  width: 100%;
  box-sizing: border-box;
  z-index: 1;
}
.icon-search_in-box {
  position: absolute;
  left: 10px;
  top: 7px;
}
.search-bar_input {
  height: 28px;
  line-height: 28px;
  font-size: 14px;
}
.search-bar_cancel-btn {
  margin-left: 10px;
  line-height: 28px;
  color: #DC3C24;
  white-space: nowrap;
}
.icon-clear {
  position: absolute;
  top: 0;
  right: 0;
  padding: 7px 8px;
  font-size: 0;
}
/* 搜索列表 */
.searchList {
  margin-top: 15px;
}
.list{
  width: 90%;
  margin-left:auto;
  margin-right:auto;
  box-shadow:3px 5px 10px #e0e0e0;
  background-color:#fff;
}
.list-content {
  width: 100%;
  height: 100rpx;
  border:1px solid #ebebeb;
  box-shadow:3px 5px 10px #e0e0e0;
  display:flex;
  align-items:center;
}
.image{
  width: 80rpx;
  text-align: center;
}
.image image{
  width: 35rpx;
  height: 35rpx;
  opacity: .8;
}
.content-name{
  display: block;
  color: #333333;
  font-size: 26rpx;
}
.content-detail{
  width: 632rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  color: #999999;
  font-size: 26rpx;
}
/* 清除历史记录 */
.history-clear {
  width: 100%;
  height: 80rpx;
  margin-top: 40rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 26rpx;
  color: #999;
  border-top: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
}