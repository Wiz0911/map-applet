.login-container {
  width: 100%;
  height: 100vh;
  background: #fff;
}
.header {
  text-align: center;
  padding: 40px 0;
}
.username, .password {
  display: flex;
  /* width: 80%; */
  border: 1px solid #ccc;
  /* flex-direction: row; */
  border-radius: 10rpx;
  margin-right: 10%;
  margin-left: 10%;
  margin-bottom: 25px;
}
.username image, .password image {
  height: 42rpx;
  width: 42rpx;
  align-self: center;
  margin-left: 10rpx;
  margin-right: 20rpx;
}
.username input, .password input {
  flex: 1;
  font-size: 30rpx;
  line-height: 90rpx;
  height: 90rpx;
}
.login-btn {
  width: 80%;
  margin-top: 35px;
  background: rgb(61, 129, 212);
  color: #fff;
}
